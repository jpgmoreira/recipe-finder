<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="stylesheet" href="css/bootstrap-4.4.1.min.css">
		<link rel="stylesheet" href="css/common.css">
		<link rel="stylesheet" href="css/search.css">
		<title>Search</title>
	</head>
	<body>

		{{#if user}}
			{{>auth_nav}}
		{{else}}
			{{>unauth_nav}}
		{{/if}}

		<div class="container">
			<div class="row">
				<div class="col-12">
					<h2>Search results for <em>{{searchText}}</em>:</h2>
				</div>
			</div>

			{{!-- Top pagination nav. --}}
			{{#if pagination}}
				<div class="row">
					<div class="col-12">
						{{>pagination_nav}}
					</div>
				</div>
			{{/if}}
			
			<div class="row">
				<div class="col-12">
					{{#if results}}
						{{>search_results}}
					{{else}}
						<p class="text-message">No results found! :(</p>
					{{/if}}
				</div>
			</div>

			{{!-- Bottom pagination nav. --}}
			{{#if pagination}}
				<div class="row">
					<div class="col-12">
						{{>pagination_nav}}
					</div>
				</div>
			{{/if}}

		</div>

	</body>
</html>
