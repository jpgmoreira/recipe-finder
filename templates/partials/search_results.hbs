{{!-- Render search results on search.hbs view. --}}
{{#each results}}
	<div class="card">
		<div class="card-header">
			<h5>{{this.title}}</h5>
		</div>
		<div class="card-body">
			<img src="{{this.image}}" class="img-fluid float-left mr-3" alt="{{this.title}}">
			<p>{{{this.summary}}}</p>
		</div>
		{{#if this.dishTypes}}
			<div class="card-footer">
				{{#each this.dishTypes}}
					<span class="badge badge-pill badge-success text-wrap">{{this}}</span>
				{{/each}}
			</div>
		{{/if}}
	</div>
{{/each}}
